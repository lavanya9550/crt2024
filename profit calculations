//profit calculations
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    int x,a,b;
    scanf("%d%d%d",&x,&a,&b);
    int p=(x*a)-(x*b)-100;
    printf("%d",p);
    return 0;
}
