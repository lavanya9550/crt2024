//pSplitting into teams
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    int a,b;
    scanf("%d%d",&a,&b);
    printf("The number of students in each team is %d and left out is %d",a/b,a%b);
    return 0;
}
